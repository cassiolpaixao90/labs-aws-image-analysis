{
	"compilerOptions": {
		"preserveConstEnums": true,
		"strictNullChecks": true,
		"inlineSources": true,
		"sourceMap": true,
		"sourceRoot": "/",
		"target": "es2019",
		"outDir": ".build",
		"allowJs": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": ["es2019"],
		"rootDir": "src",
		"baseUrl": "src",
		"resolveJsonModule": true
	},
	"include": ["src"]
}
